generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
// ------------------------------------------
// 1. 店铺表 (租户核心)
// ------------------------------------------
model Store {
  id          String     @id @default(cuid())
  name        String     // 店铺名称 (如: 花间里)
  code        String     @unique // 店铺英文标识 (如: H)，用于生成展示编号

  appId       String     @unique // 微信小程序 AppID (用于路由识别)
  appSecret   String?    // 微信小程序 AppSecret (用于多租户动态调用)

  // --- 支付配置 (未来扩展) ---
  // 如果你要做微信支付服务商模式或独立支付，还需要存商户号
  mchId       String?  // 商户号
  mchKey      String?  // 支付密钥 V3

  // --- 租户状态 ---
  isActive    Boolean  @default(true) // 欠费了/到期了，可以一键关停这个租户

  users       User[]
  categories  Category[]
  products    Product[]
  showcaseMenus ShowcaseMenu[]

  createdAt   DateTime   @default(now())
  @@map("stores")
}

// ------------------------------------------
// 2. 全局流水号计数器 (大一统流水线)
// ------------------------------------------
// ... (existing SystemSequence model) ...

// ... (existing User, Category, Product models) ...

// ------------------------------------------
// 5. 扫码登录票据
// ------------------------------------------
model LoginTicket {
  id        String   @id @default(cuid())
  storeId   String
  scene     String?  // 额外场景信息
  status    String   @default("PENDING") // PENDING, SCANNED, CONFIRMED, EXPIRED, CANCELLED
  openid    String?
  userId    String?
  token     String?  @db.Text // 登录后的 JWT token

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime

  @@map("login_tickets")
}

// ------------------------------------------
// 6. 橱窗菜单 (左侧导航装修)
// ------------------------------------------
model ShowcaseMenu {
  id          String   @id @default(cuid())
  storeId     String
  store       Store    @relation(fields: [storeId], references: [id])
  name        String

  // 筛选规则 (单规则)
  type        String   // "TAG" | "CATEGORY" | "FEATURE"
  targetValue String   // "BIRTHDAY" | "cuid_123" | "IS_HOT"

  sortOrder   Int      @default(0)
  isVisible   Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("showcase_menus")
}

// ------------------------------------------
// 2. 全局流水号计数器 (大一统流水线)
// ------------------------------------------
model SystemSequence {
  id          Int      @id @default(autoincrement()) // 核心：全局唯一的自增流水
  createdAt   DateTime @default(now())

  @@map("system_sequences")
}

// ------------------------------------------
// 2. 用户表 (权限与隔离)
// ------------------------------------------
model User {
  id          String   @id @default(cuid())
  storeId     String   // 强制关联店铺ID
  store       Store    @relation(fields: [storeId], references: [id])

  displayId   String   @unique // 唯一展示ID (如: H-1001)，用于登录用户名

  // --- 登录凭证 ---
  openid      String?  // 微信用户唯一标识 (可选)
  password    String?  // 密码 (加密存储)

  nickname    String?  // 用户昵称
  avatar      String?  // 用户头像URL
  phone       String?  // 手机号
  gender      Int      @default(0) // 性别: 0-未知, 1-男, 2-女
  birthday    String?  // 生日
  city        String?  // 城市
  province    String?  // 省份
  role        String   @default("USER") // 角色：USER(普通用户), ADMIN(管理员)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([openid, storeId])
  @@map("users")
}


// ------------------------------------------
// 3. 分类表 (分类与商品关联)
// ------------------------------------------
model Category {
  id             String     @id @default(cuid())
  storeId        String     // 补齐：强制关联店铺ID
  store          Store      @relation(fields: [storeId], references: [id])

  name           String
  parentId       String?    // 父分类ID
  sortOrder      Int        @default(0)
  isVisible      Boolean    @default(true)
  level          Int        @default(0) // 0=一级, 1=二级

  // 关联关系：自关联实现树状结构
  parent         Category?  @relation("CategoryToCategory", fields: [parentId], references: [id])
  children       Category[] @relation("CategoryToCategory")

  // 关联关系：一个分类下有多个商品
  products       Product[]

  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  @@map("categories")
}

// ------------------------------------------
// 4. 商品表 (商品与分类关联)
// ------------------------------------------
model Product {
  id             String   @id @default(cuid())
  storeId        String   // 强制关联店铺ID
  store          Store    @relation(fields: [storeId], references: [id])

  displayId   String   @unique // 哈希后的展示ID

  name           String   // 商品名称
  categoryId     String?  // 新分类ID
  category   Category? @relation(fields: [categoryId], references: [id])

  // --- 存量数据保留字段 ---
  style          String?  // 商品类型
  storeCode      String?  // [旧数据] 手动填写的编码
  images         Json     // 图片数组
  priceRef       String   // 参考价格
  materials      Json     // 花材信息
  size           String?  // 尺寸
  colorSeries    String?  // 色系
  status         String   @default("ACTIVE") // 状态：ACTIVE/INACTIVE
  description    String?  @db.Text
  sortOrder      Int      @default(0)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("products")
}