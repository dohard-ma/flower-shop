<!-- 主内容区域 -->
<view class="webview-container">
  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{isLoading}}">
    <view class="loading-text">加载中...</view>
  </view>
  <!-- WebView组件 -->
  <web-view wx:if="{{url}}" src="{{url}}" bindload="onWebViewLoad" binderror="onWebViewError" bindmessage="onWebViewMessage"></web-view>
  <!-- 错误状态 -->
  <view class="error-container" wx:if="{{!url && !isLoading}}">
    <view class="error-text">页面加载失败</view>
    <button class="retry-button" bindtap="onLoad">重试</button>
  </view>
</view>