<view class="bg-gray pb-100">
    <!-- 1. 用户信息主卡片 -->
    <view class="px-30 mb-20">
        <profile-card
            id="profileCard"
            isLoggedIn="{{isLoggedIn}}"
            userInfo="{{userInfo}}"
            levelInfo="{{levelInfo}}"
            bind:edit="onEdit"
            bind:login-success="onLoginSuccess"
        />
    </view>

    <!-- 2. 后台管理 -->
    <view wx:if="{{isAdmin}}" class="px-30 mb-20">
        <view class="card-round">
            <view class="px-30 py-30">
                <text class="text-lg font-bold text-main">后台管理</text>
            </view>
            <view class="grid-4 gap-40 px-20 pb-40">
                <view wx:for="{{adminList}}" wx:key="type" class="flex-col items-center" bind:tap="onAdmin" data-type="{{item.type}}">
                    <view class="w-48 h-48 rounded-lg flex justify-center items-center">
                        <t-icon name="{{item.icon}}" size="20" />
                    </view>
                    <text class="text-xs text-sub mt-10">{{item.title}}</text>
                </view>
            </view>
        </view>
    </view>

    <!-- 3. 订单中心 -->
    <view class="px-30 mb-20">
        <view class="card-round">
            <view class="flex justify-between items-center px-30 py-30">
                <text class="text-lg font-bold text-main">订单中心</text>
                <view class="flex items-center text-placeholder text-xs" bind:tap="onAllOrders">
                    <text class="text-sm">全部订单</text>
                    <t-icon name="chevron-right" size="20" />
                </view>
            </view>
            <view class="flex justify-around px-20 pb-40">
                <view wx:for="{{orderStatus}}" wx:key="type" class="flex-col items-center" bind:tap="onOrderStatus" data-type="{{item.type}}">
                    <view class="w-48 h-48 rounded-lg flex justify-center items-center">
                        <t-icon name="{{item.icon}}" size="20" />
                    </view>
                    <text class="text-xs text-sub mt-10">{{item.title}}</text>
                </view>
            </view>
        </view>
    </view>

    <!-- 4. 花友服务 -->
    <view class="px-30 mb-20">
        <view class="card-round">
            <view class="px-30 py-30">
                <text class="text-lg font-bold text-main">花友服务</text>
            </view>
            <view class="grid-4 gap-40 px-20 pb-40">
                <view wx:for="{{serviceList}}" wx:key="type" class="flex-col items-center" bind:tap="onService" data-type="{{item.type}}">
                    <view class="w-48 h-48 rounded-lg flex justify-center items-center">
                        <t-icon name="{{item.icon}}" size="20" />
                    </view>
                    <text class="text-xs text-sub mt-10">{{item.title}}</text>
                </view>
            </view>
        </view>
    </view>

    <view class="px-30 mb-20">
        <!-- 5. 客服导流 -->
        <service-banner bind:contact="onContactService" />
    </view>
</view>