/**
 * 一人公司核心样式库 - atom.wxss
 * 遵循《CSS 生成协议》与《白名单策略》 @/cursor/rules/css-miniprogram.mdc
 */

/* ==================================
1. 布局体系 (Layout & Flex)
================================== */
.flex { display: flex; }
.flex-row { display: flex; flex-direction: row; }
.flex-col { display: flex; flex-direction: column; }
.flex-wrap { flex-wrap: wrap; }
.flex-1 { flex: 1; }
.flex-none { flex: none; }
.flex-shrink-0 { flex-shrink: 0; }

.justify-start { justify-content: flex-start; }
.justify-end { justify-content: flex-end; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.justify-around { justify-content: space-around; }

.items-start { align-items: flex-start; }
.items-end { align-items: flex-end; }
.items-center { align-items: center; }
.items-stretch { align-items: stretch; }

.grid-4 { display: grid; grid-template-columns: repeat(4, 1fr); }

/* ==================================
  2. 间距体系 (Spacing)
  梯度: 0, 4, 10, 20, 30, 40, 60, 100
  ================================== */
.m-0 { margin: 0 !important; }
.mt-4 { margin-top: 4rpx; }
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mt-40 { margin-top: 40rpx; }

.mb-4 { margin-bottom: 4rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.mb-40 { margin-bottom: 40rpx; }
.mb-60 { margin-bottom: 60rpx; }

.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.p-0 { padding: 0 !important; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }
.p-40 { padding: 40rpx; }

.px-20 { padding-left: 20rpx; padding-right: 20rpx; }
.px-30 { padding-left: 30rpx; padding-right: 30rpx; }
.px-40 { padding-left: 40rpx; padding-right: 40rpx; }
.px-60 { padding-left: 60rpx; padding-right: 60rpx; }

.py-20 { padding-top: 20rpx; padding-bottom: 20rpx; }
.py-30 { padding-top: 30rpx; padding-bottom: 30rpx; }
.pt-60 { padding-top: 60rpx; }
.pb-40 { padding-bottom: 40rpx; }
.pb-60 { padding-bottom: 60rpx; }
.pb-100 { padding-bottom: 100rpx; }

.gap-10 { gap: 10rpx; }
.gap-20 { gap: 20rpx; }
.gap-30 { gap: 30rpx; }
.gap-40 { gap: 40rpx; }

/* ==================================
  3. 视觉装饰 (Visual)
  ================================== */
/* 语义化背景色 */
.bg-white { background-color: #ffffff; }
.bg-page { background-color: #f5f5f5; } /* 原 bg-f5 */
.bg-gray { background-color: #f7f7f7; }
.bg-brand { background-color: #1a1a1a; }
.bg-mask { background-color: rgba(0, 0, 0, 0.5); }

/* 圆角 */
.rounded-sm { border-radius: 8rpx; }
.rounded-md { border-radius: 16rpx; }
.rounded-lg { border-radius: 24rpx; }
.rounded-3xl { border-radius: 48rpx; }
.rounded-t-3xl { border-radius: 48rpx 48rpx 0 0; }
.rounded-full { border-radius: 9999rpx; }
.overflow-hidden { overflow: hidden; }

/* 阴影与边框 */
.shadow-sm { box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05); }
.border-1 { border: 1rpx solid #f0f0f0; }
.border-t { border-top: 1rpx solid #f0f0f0; }
.border-b { border-bottom: 1rpx solid #f0f0f0; }
.border-brand { border: 1rpx solid #1a1a1a; }

/* ==================================
  4. 字体排版 (Typography)
  ================================== */
.font-normal { font-weight: normal; }
.font-medium { font-weight: 500; } /* 原 font-500 */
.font-bold { font-weight: bold; }

.text-xs { font-size: 24rpx; }
.text-sm { font-size: 26rpx; } /* 修正为标准小字 */
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 48rpx; }

/* 语义化文本色 */
.text-main { color: #333333; }      /* 原 text-333 */
.text-sub { color: #666666; }       /* 原 text-666 */
.text-placeholder { color: #999999; } /* 原 text-999 */
.text-price { color: #ff4d4f; }
.text-brand { color: #1a1a1a; }
.text-white { color: #ffffff; }

.text-center { text-align: center; }
.text-right { text-align: right; }
.truncate { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

/* ==================================
  5. 尺寸与定位 (Sizing & Position)
  ================================== */
.relative { position: relative; }
.absolute { position: absolute; }
.fixed { position: fixed; }
.absolute-fill { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }
.z-10 { z-index: 10; }

.w-full { width: 100%; }
.h-full { height: 100%; }
.w-screen { width: 100vw; }
.h-screen { height: 100vh; }

/* 尺寸白名单 (White List) - 仅限高频组件 */
.w-4 { width: 4rpx; }
.w-32 { width: 32rpx; }
.w-48 { width: 48rpx; }
.w-120 { width: 120rpx; }
.w-160 { width: 160rpx; }
.w-200 { width: 200rpx; }

.h-4 { height: 4rpx; }
.h-32 { height: 32rpx; }
.h-48 { height: 48rpx; }
.h-100 { height: 100rpx; }
.h-120 { height: 120rpx; }
.h-160 { height: 160rpx; }
.h-200 { height: 200rpx; }