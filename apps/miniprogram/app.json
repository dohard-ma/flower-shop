{
    "pages": [
        "pages/home/index",
        "pages/category/index",
        "pages/cart/index",
        "pages/user/index",
        "pages/admin/index",
        "pages/admin/login/index",
        "pages/admin/upload/index",
        "pages/webview/index",
        "pages/admin/products/index",
        "pages/admin/detail/index",
        "pages/admin/categories/index"
    ],
    "tabBar": {
        "color": "#999999",
        "selectedColor": "#0c3d20",
        "backgroundColor": "#ffffff",
        "borderStyle": "black",
        "list": [
            {
                "text": "首页",
                "pagePath": "pages/home/index",
                "iconPath": "./assets/remix/home-2-line.png",
                "selectedIconPath": "./assets/remix/home-2-fill.png"
            },
            {
                "text": "分类",
                "pagePath": "pages/category/index",
                "iconPath": "./assets/remix/store-2-line.png",
                "selectedIconPath": "./assets/remix/store-2-fill.png"
            },
            {
                "text": "购物车",
                "pagePath": "pages/cart/index",
                "iconPath": "./assets/remix/shopping-cart-line.png",
                "selectedIconPath": "./assets/remix/shopping-cart-fill.png"
            },
            {
                "text": "我的",
                "pagePath": "pages/user/index",
                "iconPath": "./assets/remix/user-5-line.png",
                "selectedIconPath": "./assets/remix/user-5-fill.png"
            }
        ]
    },
    "window": {
        "backgroundTextStyle": "light",
        "navigationBarBackgroundColor": "#ffffff",
        "navigationBarTitleText": "花涧礼",
        "navigationBarTextStyle": "black"
    },
    "requiredPrivateInfos": [
        "chooseAddress"
    ],
    "permission": {
        "scope.address": {
            "desc": "你的地址信息将用于收货地址选择"
        }
    },
    "usingComponents": {
        "t-icon": "tdesign-miniprogram/icon/icon"
    },
    "sitemapLocation": "sitemap.json",
    "resolveAlias": {
        "@/*": "/*",
        "@/utils/*": "/utils/*",
        "@/apis/*": "/utils/apis/*",
        "@/config/*": "/config/*"
    }
}